{
  "name": "MessageBook",
  "description": "Skip Facebook's News Feed and go straight to messages",
  "version": "1.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "128": "m.png"
  },
  "options_page": "options.html",
  "permissions": [
    "*://www.facebook.com/*",
    "*://m.facebook.com/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
